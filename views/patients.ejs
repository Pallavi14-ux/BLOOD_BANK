<!DOCTYPE html> 
<html lang="en">
     <head> 
        <meta charset="UTF-8">
         <title>Patients</title> 
         <script src="https://cdn.tailwindcss.com"></script>
        </head>
         <body class="bg-gray-100 min-h-screen flex flex-col items-center py-10">
             <h1 class="text-6xl italic text-red-900 font-bold font-serif text-center mb-6"> Patients </h1>
              <a href="/dashboard" class="mb-8 px-6 py-2 bg-blue-600 text-white rounded-full shadow hover:bg-blue-700 transition transform hover:-translate-y-1"> ‚Üê Back to Dashboard </a>
               <div class="w-full max-w-xl bg-white p-6 rounded-lg shadow-md mb-10"> 
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Add Patient</h2>
                 <form action="/patients/add" method="POST" class="flex flex-col space-y-4"> 
                    <input type="text" name="patient_name" placeholder="Name" required class="p-2 border rounded"> 
                    <input type="number" name="patient_age" placeholder="Age" required class="p-2 border rounded">
                     <input type="text" name="requested_blood_group" placeholder="Requested Blood Group" required class="p-2 border rounded">
                      <input type="text" name="hospital_id" placeholder="Hospital ID" required class="p-2 border rounded">
                       <input type="text" name="patient_contact" placeholder="Contact" required class="p-2 border rounded"> 
                       <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition"> Add Patient </button>
                     </form>
                     </div> 
                     <div class="w-full max-w-5xl overflow-x-auto"> 
                        <h2 class="text-2xl font-semibold text-gray-800 mb-4">All Patients</h2> 
                        <table class="min-w-full bg-white rounded-lg shadow-md"> <thead class="bg-red-700 text-white"> 
                            <tr>
                                 <th class="px-4 py-2">ID</th>
                                  <th class="px-4 py-2">Name</th> 
                                  <th class="px-4 py-2">Age</th> 
                                  <th class="px-4 py-2">Requested Blood Group</th> 
                                  <th class="px-4 py-2">Hospital ID</th> 
                                  <th class="px-4 py-2">Contact</th> 
                                  <th class="px-4 py-2">Action</th> 
                                </tr> 
                            </thead> 
                            <tbody class="text-gray-700"> <% patients.forEach(patient => { %> 
                                <tr class="border-b hover:bg-gray-100">
                                     <td class="px-4 py-2 text-center"><%= patient.PATIENT_ID %></td>
                                      <td class="px-4 py-2"><%= patient.PATIENT_NAME %></td> 
                                      <td class="px-4 py-2 text-center"><%= patient.PATIENT_AGE %></td>
                                       <td class="px-4 py-2 text-center"><%= patient.REQUESTED_BLOOD_GROUP %></td>
                                        <td class="px-4 py-2 text-center"><%= patient.HOSPITAL_ID %></td>
                                         <td class="px-4 py-2"><%= patient.PATIENT_CONTACT %></td>
                                          <td class="px-4 py-2 text-center">
                                             <form action="/patients/delete/<%= patient.PATIENT_ID %>" method="POST">
                                                 <button type="submit" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 transition"> Delete </button>
                                                 </form> 
                                                </td>
                                             </tr> <% }) %> 
            </tbody> 
        </table>
     </div> 
    </body> 
    </html>